/* pages/history/history.wxss */
.title{
  height: 35px;
  width: 100%;
  background: #f4f4f4;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}
.money{
  font-size: 30rpx;
  margin-top: 10rpx;
}
.money1{
  font-size: 30rpx;
  color: red;
}
.picker{
  height: 100%;
  line-height: 35px;
  float: left;
}
.his{
  width: 100%;  
}
.item{
  width: 100%;
  height: 270rpx;
  border-bottom: 2px solid #ccc;
  padding: 30rpx;
  padding-top: 0;
  box-sizing: border-box;
}
.content{
  width: 100%;
  height: 160rpx;
  display: flex;
}
.a{
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.a image{
  width: 50rpx;
  height: 50rpx;
}
.address{
  width: 90%;
  word-break: break-all;
  font-size: 28rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical; 
}
