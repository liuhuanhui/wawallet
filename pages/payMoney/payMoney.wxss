/* pages/payMoney/payMoney.wxss */
.address{
  width: 80%;
  word-break: break-all;
  color: #fff;
  font-weight: bold;
}
.money{
  font-size: 80rpx;
  font-weight: bold;
  color: #FF7F24;
}
.card{
  width: 90%;
}
.to{
  width: 100%;
  height: 100rpx;
  background: #FF7F24;
  border-bottom: 2px dotted #fff;
  position: relative;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  font-weight: bold;
}
.add{
  width: 100%;
  height: 200rpx;
  background:  #FF7F24;
  display: flex;
  align-items: center;
  justify-content: center;
}
.yuan{
  width: 40rpx;
  height: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  position: absolute;
  bottom: -20rpx;
}
.yuan1{
  left: -20rpx;
}
.yuan2{
  right: -20rpx;
}
.btn{
  width: 90%;
  height: 80rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
  margin-top: 150rpx;
  background: #FF7F24;
}